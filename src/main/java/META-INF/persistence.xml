<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="trabalhoFinal" transaction-type="RESOURCE_LOCAL">
		<class>br.upf.projetos.trabalhoFinal.beans.Pessoa</class>
		<class>br.upf.projetos.trabalhoFinal.beans.Paciente</class>
		<class>br.upf.projetos.trabalhoFinal.beans.Medico</class>
		<class>br.upf.projetos.trabalhoFinal.beans.Especializacao</class>
		<class>br.upf.projetos.trabalhoFinal.beans.Clinica</class>
		<class>br.upf.projetos.trabalhoFinal.beans.Consulta</class>
		<class>br.upf.projetos.trabalhoFinal.beans.HorarioDisponivel</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/consultas"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="postgres"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/> 
		</properties>
	</persistence-unit>
</persistence>
